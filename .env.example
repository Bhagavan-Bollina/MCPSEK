# mcpsek Configuration
# Copy this file to .env and update with your values

# Database connection string
MCPSEK_DB_URL=postgres://localhost:5432/mcpsek?sslmode=disable

# HTTP server address
MCPSEK_HTTP_ADDR=:8080

# Directory for cloned repositories
MCPSEK_CLONE_DIR=/tmp/mcpsek-repos

# Number of concurrent scan workers
MCPSEK_SCAN_WORKERS=4

# How often to scan servers (Go duration format)
MCPSEK_SCAN_INTERVAL=24h

# How often to run discovery (Go duration format)
MCPSEK_DISCOVERY_INTERVAL=168h

# API rate limit (requests per minute)
MCPSEK_API_RATE_LIMIT=100

# GitHub personal access token (optional, for higher rate limits)
MCPSEK_GITHUB_TOKEN=

# Shodan API key (optional, for advanced exposure scanning)
MCPSEK_SHODAN_API_KEY=
